<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/value"
            android:hint="Enter The Message" />

        <TextView
            android:id="@+id/DecryptedData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/decrypt"
            android:layout_margin="20dp"
            android:textColor="#000505"
            android:textSize="20dp"
            android:text="" />
        <EditText
            android:id="@+id/key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/value"
            android:layout_margin="20dp"
            android:hint="Enter the key"/>

        <Button
            android:id="@+id/encrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypt the message"
            android:layout_below="@id/key"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/decrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decrypt the message"
            android:layout_below="@id/encrypt"
            android:layout_margin="20dp"/>

//android:onClick="decrypt"

</RelativeLayout>
